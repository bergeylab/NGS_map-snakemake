module load samtools;samtools idxstats data/aligned_reads/Col_Body_1.PE.bwa.sorted.fixed.filtered.postdup.RG.passed.bam | cut -f 1 | grep -v FJ* | xargs samtools view -b data/aligned_reads/Col_Body_1.PE.bwa.sorted.fixed.filtered.postdup.RG.passed.bam > data/aligned_reads/Col_Body_1.PE.bwa.sorted.fixed.filtered.postdup.RG.passed.mito_removed.bam;samtools index -b data/aligned_reads/Col_Body_1.PE.bwa.sorted.fixed.filtered.postdup.RG.passed.mito_removed.bam data/aligned_reads/Col_Body_1.PE.bwa.sorted.fixed.filtered.postdup.RG.passed.mito_removed.bam.bai